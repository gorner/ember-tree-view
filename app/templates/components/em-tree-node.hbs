<li class="{{this.styleClasses}} {{this.expandedClasses}} {{this.leafClasses}}">
  <span>

    {{this.label}}
    {{#if this.hasIcon}}
      <FaIcon {{on 'click' this.toggle}} @icon={{this.iconName}} @class={{this.iconClass}} role="button"/>
    {{else}}
      <a {{on 'click' this.toggle}} href="" class="text">*</a>
    {{/if}}
  </span>

  {{#if this.tree.in-multi-selection}}
    <span class="em-tree-node-multiselection">
      {{#if this.multiSelected}}
        <i {{on 'click' this.toggleSelection}} role="button" class="{{this.tree.selected-icon}}"></i>
      {{else}}
        <i {{on 'click' this.toggleSelection}} role="button" class="{{this.tree.unselected-icon}}"></i>
      {{/if}}
    </span>
  {{/if}}

  <span {{on 'click' this.select}} role="button" class="{{this.nodeSelectedClasses}} title">
    {{#if this.model.nodeIcon}}
      {{svg-jar this.model.nodeIcon class="em-tree-icon" width="24px"}}
    {{/if}}
    {{this.model.title}}
    {{#if this.tree.hovered-actions}}
      <span class="actions">
        {{#each this.hoveredActions as |hoveredAction|}}
          <EmTreeNodeIconAction @meta={{hoveredAction}} @parentView={{this}} @model={{this.model}} />
        {{/each}}
      </span>
    {{/if}}
  </span>

  {{#if this.expanded}}
    <EmTreeBranch @model={{this.model}} @tree={{this.tree}} @async={{this.async}} @target={{this.target}} @children={{this.requestChildren}} />
  {{/if}}
</li>