<span>
  {{#if this.hasIcon}}
    <i {{action "toggle"}} class="{{iconClass}}"></i>
  {{else}}
    <a {{action "toggle"}} class="text">*</a>
  {{/if}}
</span>

{{#if this.tree.in-multi-selection}}
  <span class="em-tree-node-multiselection">
    {{#if multi-selected}}
      <i {{action "toggleSelection"}} class="{{this.tree.selected-icon}}"></i>
    {{else}}
      <i {{action "toggleSelection"}} class="{{this.tree.unselected-icon}}"></i>
    {{/if}}
  </span>
{{/if}}

<span {{action "select"}} class="{{nodeSelectedClasses}} title">
  {{#if this.model.nodeIcon}}
    {{svg-jar model.nodeIcon class="em-tree-icon" width="24px"}}
  {{/if}}
  {{this.model.title}}
  {{#if this.tree.hovered-actions}}
    <span class="actions">
      {{#each this.hoveredActions}}
        <EmTreeNodeIconAction @meta={{this}} @model={{controller.model}} />
      {{/each}}
    </span>
  {{/if}}
</span>

{{#if this.expanded}}
  <EmTreeBranch @model={{model}} @tree={{tree}} @async={{async}} @target={{target}} @children={{action "requestChildren"}} />
{{/if}}